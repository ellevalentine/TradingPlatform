<h1>Stocks</h1>

<h4>Search by Company name:</h4>
<%= form_tag(stocks_path, method: :get) do  %>
<%= text_field_tag(:search, params[:search]) %>
<%= submit_tag ("Search")  %>
<% end %>

<br>
<hr>


<%= simple_form_for :seach, url:root_path, method:"GET", html:{class: 'form-inline'} do |f| %>
<%= f.input :company_name, input_html: {value:""}  %>
<%= f.submit "search", class: "btn btn-primary" %>
<% end %>








<% @stocks.each do |s| %>

<%= link_to s.company_name, stock_path(s) %> (<%= s.symbol  %>) <br>
