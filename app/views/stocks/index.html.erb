<h1>Stocks</h1>

<%= link_to "Back to home", users_path %>

<h4>Search by Company name:</h4>



<%= form_tag(stocks_path, method: "get") do %>
  <%= label_tag(:q, "Search:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>


<br>
<hr>


<% @stocks.each do |s| %>

<%= link_to s.company_name, stock_path(s) %> (<%= s.symbol  %>) <br>
<%= s.price  %><br>

<br>
<% end %>
